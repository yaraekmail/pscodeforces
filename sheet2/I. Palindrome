https://codeforces.com/group/MWSDmqGsZm/contest/219432/problem/I

#include <bits/stdc++.h>
using namespace std;
 
int main()
{
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    cout.tie(0);
    int a, n;
    cin >> n;
    a = n;
    int reversed = 0;
 
    while (n > 0)
    {
        int digit = n % 10;
        reversed = reversed * 10 + digit;
        n = n / 10;
    }
 
    if (a == reversed)
        cout << reversed << endl
             << "YES";
    else
        cout << reversed << endl
             << "NO";
 
    return 0;
}
